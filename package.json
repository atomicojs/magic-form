{
    "name": "pkg-browser",
    "description": "pkg-browser",
    "workspaces": [
        "src/**/*"
    ],
    "version": "0.0.0",
    "type": "module",
    "publishConfig": {
        "access": "public"
    },
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com/uppercod/pkg-browser.git"
    },
    "keywords": [
        "browser",
        "dom"
    ],
    "author": "UpperCod",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/uppercod/pkg-browser/issues"
    },
    "homepage": "https://github.com/uppercod/pkg-browser#readme",
    "scripts": {
        "start": "vite --force",
        "build": "vite build",
        "test": "wtr tests/**/*.test.tsx --node-resolve",
        "exports": "exports src/*.js --exports --types --main components",
        "prepublishOnly": "npm run test && npm run exports"
    },
    "devDependencies": {
        "@atomico/exports": "^0.22.0",
        "@esm-bundle/chai": "*",
        "@uppercod/vite-meta-url": "latest",
        "@uppercod/vite-meta-url-load-css": "latest",
        "@web/test-runner": "^0.13.22",
        "typescript": "^4.5.4",
        "vite": "latest",
        "vite-web-test-runner-plugin": "^0.1.0"
    },
    "prettier": {
        "tabWidth": 4,
        "singleQuote": false
    },
    "dependencies": {
        "@atomico/hooks": "^3.23.0",
        "@uppercod/exp-route": "^1.3.0",
        "atomico": "^1.34.3"
    }
}
