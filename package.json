{
    "name": "@atomico/magic-form",
    "description": "Improves the form development experience thanks to the use of webcomponents to centralize submission",
    "workspaces": [
        "src/**/*"
    ],
    "version": "0.1.0",
    "type": "module",
    "publishConfig": {
        "access": "public"
    },
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com/atomicojs/magic-form.git"
    },
    "keywords": [
        "browser",
        "webcomponents",
        "form"
    ],
    "author": "UpperCod",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/atomicojs/magic-form/issues"
    },
    "homepage": "https://github.com/atomicojs/magic-form#readme",
    "scripts": {
        "start": "vite",
        "build": "vite build",
        "test": "rm -rf node_modules/.vite && wtr tests/**/*.test.tsx --node-resolve",
        "exports": "exports src/*.js --exports --types --main components",
        "prepublishOnly": "npm run test && npm run exports"
    },
    "devDependencies": {
        "@atomico/exports": "^0.22.0",
        "@esm-bundle/chai": "*",
        "@uppercod/vite-meta-url": "latest",
        "@uppercod/vite-meta-url-load-css": "latest",
        "@web/test-runner": "^0.13.23",
        "typescript": "^4.5.4",
        "vite": "latest",
        "vite-web-test-runner-plugin": "^0.1.0"
    },
    "prettier": {
        "tabWidth": 4,
        "singleQuote": false
    },
    "dependencies": {
        "@atomico/hooks": "^3.23.0",
        "atomico": "^1.34.4"
    }
}
